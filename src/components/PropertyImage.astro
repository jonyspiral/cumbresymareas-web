---
import { Image } from 'astro:assets';

const { src, alt, slug } = Astro.props;

// Imágenes genéricas de alta calidad si la real falla
const placeholderMontaña = "https://images.unsplash.com/photo-1519331379826-f10be5486c6f?q=80&w=1200";
const placeholderMar = "https://images.unsplash.com/photo-1507525428034-b723cf961d3e?q=80&w=1200";

const fallback = slug === 'casanevada' ? placeholderMontaña : placeholderMar;
---

<div class="image-wrapper">
  {src ? (
    <Image src={src} alt={alt} width={1200} height={800} class="img-fluid" />
  ) : (
    <img src={fallback} alt={alt} class="img-fluid" />
  )}
</div>

<style>
  .image-wrapper { width: 100%; height: 500px; overflow: hidden; border-radius: 12px; background: #eee; }
  .img-fluid { width: 100%; height: 100%; object-fit: cover; }
</style>